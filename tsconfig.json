{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "es2015",
    "target": "es2015", 
    "lib": ["es2017", "es6", "dom"],
    "sourceMap": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "jsx": "react"
  },
  "exclude": [
    "dist",
    "node_modules",
  ]
}
